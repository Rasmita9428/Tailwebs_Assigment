<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_130sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp">

        <TextView
            android:id="@+id/txtembarkyourjourney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="You can Add Student Result"
            android:textColor="@color/color_continue_back"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/txtsubtitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtembarkyourjourney"
            android:gravity="center"
            android:text="Have a great day!"
            android:textColor="#000000"
            android:textSize="@dimen/_12sdp" />

    </RelativeLayout>


</RelativeLayout>