<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_130sdp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/txtwelcomesauteez"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Welcome to Tailwebs Assigment"
            android:textColor="@color/color_continue_back"
            android:textSize="@dimen/_15sdp"/>


        <TextView
            android:id="@+id/txtsubtitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtwelcomesauteez"
            android:gravity="center"
            android:text="Have a great day!"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            />
    </RelativeLayout>
</RelativeLayout>